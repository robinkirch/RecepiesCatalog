<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:resx="clr-namespace:RecipeCatalog.Resources.Language"
               x:Class="RecipeCatalog.Popups.AddGroupPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White">
        <Label Text="{x:Static resx:AppLanguage.Group_InformationText}" FontSize="Medium"/>
        <Entry x:Name="NameEntry" Placeholder="{x:Static resx:AppLanguage.Placeholder_Name}" />
        <Button Text="{x:Static resx:AppLanguage.Save}" Clicked="OnSendButtonClicked"/>
        <Button Text="{x:Static resx:AppLanguage.Cancel}" Clicked="OnCancelButtonClicked"/>
    </VerticalStackLayout>
</toolkit:Popup>