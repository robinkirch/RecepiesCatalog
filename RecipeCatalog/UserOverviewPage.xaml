<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeCatalog.UserOverviewPage"
             xmlns:resx="clr-namespace:RecipeCatalog.Resources.Language"
             Title="UserOverviewPage">
    <Grid Padding="0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
            x:Name="BackBtn"
            Clicked="OnBack"
            HorizontalOptions="End"
            Margin="20, 0">
            <Button.ImageSource>
                <FontImageSource Glyph="&#xf00d;"
             FontFamily="FontAwesomeSolid"
             Size="20"
             Color="Black" />
            </Button.ImageSource>
        </Button>
        <ScrollView Grid.Row="1">
            <Grid x:Name="UserView" Padding="30,0" ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <!-- Zeilen werden dynamisch hinzugefÃ¼gt -->
                </Grid.RowDefinitions>
            </Grid>
        </ScrollView>
        <ScrollView Grid.Row="2" Padding="50"></ScrollView>
    </Grid>
</ContentPage>